@model Dal.BookViewModel
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">Book Info</h4>
</div>
<div clas="modal-body">
    <dl class="dl-horizontal">
        <dt class="imgClass">

            @{
                if (Model.Image != null)
                {
                    var base64 = Convert.ToBase64String(Model.Image);
                    var imgsrc = String.Format((string) "data:image/jpg;base64,{0}", (object) base64);
                    <img id="imgId" class="img-rounded" src="@imgsrc" style="max-height: 100px; max-width: 100px"/>
                    ;
                }
                else
                {
                    <img id="imgId" class="img-rounded" src="/Resource/no-image.png" style="max-height: 100px; max-width: 100px"/>
                }
            }

        </dt>
        <dd>
            
        </dd>
        <dt>
            Author
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Author.FullName)
        </dd>

        <dt>
            Country
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Country.Name)
        </dd>

        <dt>
            Title
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>

        <dd>
            @{
                var price = Model.Price + Model.Country.CountryCode;
            }
            $@price
        </dd>
        <dt>
            Pages
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PageCount)
        </dd>
        <dt>
            Description
        </dt>

        <dd style="max-height: 300px;max-width: 300px">
            @Html.DisplayFor(model => model.Description)
        </dd>

        
    </dl>
</div>
<div class="modal-footer">
    <button class="btn" data-dismiss="modal">Ok</button>
</div>