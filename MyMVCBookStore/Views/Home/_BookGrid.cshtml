@using GridMvc.Html
@using GridMvc.Sorting
@model Grid.Mvc.Ajax.GridExtensions.AjaxGrid<DAL.Entities.Book>

@(
    Html.Grid(Model).Named("BookGrid")
        .Columns(columns => 
            {
                columns.Add(f => f.Price).Titled("Price");
                columns.Add(f => f.Title).Titled("Title");
            })
        .Filterable()
        .Sortable()
        .WithPaging(10))